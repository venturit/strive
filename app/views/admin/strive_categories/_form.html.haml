= form_for [:admin,@strive_category], html: {class: 'user'} do |f|
  - if @strive_category.errors.any?
    #error_explanation
      %h2= "#{pluralize(@strive_category.errors.count, "error")} prohibited this strive_category from being saved:"
      %ul
        - @strive_category.errors.full_messages.each do |message|
          %li= message
  .field
    %br/
    = f.label :name
    %br/
    = f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control form-control-user"
    %br/
  .field
    %br/
    = f.label :description
    %br/
    = f.text_area :description, autofocus: true, autocomplete: "description", class: "form-control form-control-user"
  .field
    %br/
  .actions
    = f.submit 'Save', class:"btn btn-primary btn-user btn-block"
