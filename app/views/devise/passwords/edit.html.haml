.label 
  Change My Password
%br
= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "user" }) do |f|
  = render "devise/shared/error_messages", resource: resource
  = f.hidden_field :reset_password_token
  - new_password_placeholder = "New password"
  - if @minimum_password_length
    -new_password_placeholder = "#{new_password_placeholder} minimum #{@minimum_password_length} characters"
  .form-group
    = f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control form-control-user",  placeholder: new_password_placeholder
  .form-group
    = f.password_field :password_confirmation, autofocus: true, autocomplete: "new-password", class: "form-control form-control-user",  placeholder: "Confirm password"
  .actions
    %br
    = f.submit "Change my password", class: "btn btn-primary btn-user btn-block"

= render "devise/shared/links"
